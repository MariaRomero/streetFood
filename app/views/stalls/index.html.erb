<div class="background-box">
  <br><%= render "user_location" %>

<br><% if @stalls.any? %>
  <% @stalls.each do |stall| %>
    <%= link_to stall.name, stall_path(stall), :class => "link" %><br>
    <%= image_tag stall.image.url(:medium), :class => "images" %><br>

    <div class="description-address">
      Description: <%= stall.description %><br>
      Address: <%= stall.address %><br>
    </div>


      <% if current_user == stall.user %>
      <ul class="small-under-bar">
        <li>
          <%= link_to "Edit", edit_stall_path(stall), :class => "bottom-link" %>
        </li>
        <li>
          <%= link_to "Delete", stall_path(stall), :class => "bottom-link", method: :delete %>
        </li>
        </ul>
      <% end %>

  <% end %>
<% else %>
  No stalls yet
<% end %>

<% if @stalls_filter %>
  <%= render "filter_map" %>
<% end %>
</div>
